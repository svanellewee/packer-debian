{
    "variables": {
	"iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.6.0-amd64-netinst.iso",
	"iso_checksum": "sha512:cb74dcb7f3816da4967c727839bdaa5efb2f912cab224279f4a31f0c9e35f79621b32afe390195d5e142d66cedc03d42f48874eba76eae23d1fac22d618cb669",
        "ssh_timeout": "30m",
        "country": "US",
        "write_zeros": "true",
        "headless": "false"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
	    "guest_os_type": "Debian_64",
            "guest_additions_mode": "upload",
	    "guest_additions_url" : "https://download.virtualbox.org/virtualbox/6.1.10/VBoxGuestAdditions_6.1.10.iso",
            "http_directory": "http-serve",
            "boot_wait": "5s",
            "boot_command": [
		    "<wait><down>",
		    "<wait><down>",
		    "<wait><enter>",
		    "<wait><down>",
		    "<wait><down>",
		    "<wait><down>",
		    "<tab><wait>url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter>",
		    "<wait10m><enter>",
                    "<wait2m>root<enter><wait>vagrant<enter><wait><wait><wait>",
                    "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/update-guest<enter><wait><wait><wait>",
                    "bash ./update-guest {{ .HTTPIP }}:{{ .HTTPPort }}<enter><wait2m>"
            ],
            "cpus": 1,
            "memory": 2048,
            "disk_size": 20480,
            "hard_drive_interface": "sata",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "shutdown_command": "echo vagrant | sudo -S shutdown now",
            "headless": "{{ user `headless`}}"
        }
    ],
    "provisioners": [
       {
	 "type": "shell",
	 "execute_command": "echo vagrant | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
         "script": "stage1-scripts/setup-vagrant"
       }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "output/packer_debian_{{ .Provider }}-{{isotime \"2006.01\"}}.01.box"
        },
	{
	    "type": "manifest",
	    "output": "output/stage-1-manifest.json"
	}
    ]
}
